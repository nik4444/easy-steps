<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fillViewport="true"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_easy_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_60sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_title" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_easy_steps"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_circular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/test60"
                        android:visibility="gone" />

                    <!--                    8BC34A-->


                    <com.easysteps.helper.CustomGauge
                        android:id="@+id/gauge"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_centerInParent="true"
                        app:gaugeDividerColor="@color/black"
                        app:gaugeEndValue="20000"
                        app:gaugePointSize="0"
                        app:gaugeStartAngle="135"
                        app:gaugeStrokeCap="ROUND"
                        app:gaugeStrokeColor="#e6e6e6"
                        app:gaugeStrokeWidth="20dp"
                        app:gaugeSweepAngle="270" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginTop="@dimen/_27sdp"
                        android:src="@drawable/ic_speedmeter"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/img_walk"
                        app:tint="#1F3E6F" />

                    <TextView
                        android:id="@+id/textViewStepsCount"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/_120sdp"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text="@string/text_0"
                        android:textColor="@color/text_easy"
                        android:textSize="30dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="@dimen/_150sdp"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="@string/text_step"
                        android:textColor="@color/text_steps"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_circular"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_30sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_distance"
                        android:textColor="@color/text_steps"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
