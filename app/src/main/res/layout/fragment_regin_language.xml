<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fillViewport="true"
    tools:context=".fragment.ReginLanguageFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="@dimen/_5sdp">

      <LinearLayout
          android:id="@+id/ll_regionandLangaunge"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/_7sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/ic_back"
              android:layout_width="@dimen/_15sdp"
              android:layout_height="@dimen/_15sdp"
              android:layout_marginTop="@dimen/_35sdp"
              android:src="@drawable/back"
              app:tint="@color/text_steps" />

          <TextView
              android:id="@+id/txt_region_language"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_25sdp"
              android:layout_marginBottom="@dimen/_15sdp"
              android:fontFamily="@font/bold"
              android:text="@string/text_region_language"
              android:textColor="@color/text_steps"
              android:textSize="@dimen/_25ssp"
              android:textStyle="bold" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_regin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ll_regionandLangaunge"
          android:layout_marginHorizontal="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/bold"
              android:text="@string/text_region2"
              android:textColor="@color/text_steps"
              android:textSize="@dimen/_12ssp"
              android:textStyle="normal" />

          <LinearLayout
              android:id="@+id/ll_region"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_35sdp"
                  android:layout_margin="@dimen/_5sdp"
                  android:elevation="@dimen/_5sdp"
                  app:cardCornerRadius="@dimen/_14sdp">

                  <TextView
                      android:id="@+id/txt_country"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:background="@null"
                      android:fontFamily="@font/regular"
                      android:gravity="center_vertical" />

                  <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="match_parent"
                      android:layout_gravity="end"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:src="@drawable/ic_search"
                      app:tint="@android:color/darker_gray" />

              </androidx.cardview.widget.CardView>

          </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ll_regin"
          android:layout_marginHorizontal="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/bold"
              android:text="@string/text_language"
              android:textColor="@color/text_steps"
              android:textSize="@dimen/_12ssp"
              android:textStyle="normal" />

          <LinearLayout
              android:id="@+id/ll_language"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_35sdp"
                  android:layout_margin="@dimen/_5sdp"
                  android:elevation="@dimen/_5sdp"
                  app:cardCornerRadius="@dimen/_14sdp">

                  <TextView
                      android:id="@+id/txt_language"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:background="@null"
                      android:fontFamily="@font/regular"
                      android:gravity="center_vertical" />

                  <ImageView
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="match_parent"
                      android:layout_gravity="end"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:src="@drawable/ic_search"
                      app:tint="@android:color/darker_gray" />

              </androidx.cardview.widget.CardView>

          </LinearLayout>

      </LinearLayout>


  </RelativeLayout>

</androidx.core.widget.NestedScrollView>